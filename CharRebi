  <!-- Подключаем библиотеки jQuery и Socket.io -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.socket.io/4.1.2/socket.io.min.js"></script>

  <style>
    #chat-container {
      position: fixed;
      right: 20px;
      bottom: 20px;
      width: 300px;
      height: 400px;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
      border-radius: 5px;
      overflow: hidden;
    }

    #chat-header {
      background-color: #f5f5f5;
      padding: 10px;
      font-size: 16px;
      font-weight: bold;
      border-bottom: 1px solid #ccc;
    }

    #chat-messages {
      height: 320px;
      overflow-y: auto;
      padding: 10px;
    }

    #chat-input {
      height: 60px;
      padding: 10px;
      border-top: 1px solid #ccc;
      display: flex;
    }

    #chat-input input[type=text] {
      flex-grow: 1;
      border: none;
