<body>

<!-- Контейнер для виджета -->
<div id="chat-container">
  <div id="chat-header">Чат</div>
  <div id="chat-messages"></div>
  <div id="chat-input">
    <input type="text" placeholder="Напишите сообщение...">
    <button>Отправить</button>
  </div>
</div>

<!-- Скрипт для работы с чатом -->
<script>
  $(function() {
    // Подключаемся к серверу Socket.io
    const socket = io('https://excessive-billowy-orange.glitch.me');

    // Обработчик получения сообщения от сервера
    socket.on('message', function(data) {
      // Добавляем сообщение в окно чата
      $('#chat-messages').append('<p>' + data.text + '</p>');
    });

    // Обработчик отправки сообщения из формы
    $('#chat-input button').click(function() {
      const message = $('#chat-input input[type=text]').val();
      socket.emit('message', {text: message});
      $('#chat-messages').append('<p><b>Я:</b> ' + message + '</p>');
      $('#chat-input input[type=text]').val('');

      // Отправка сообщения в Telegram
      $.post('https://api.telegram.org/bot1784366866:AAE2LTnizINEFFTbov4LZc8j1tAANhaest8/sendMessage', {
        chat_id: 591497094,
        text: message
      });
    });
  });
</script>


</body>
